    "hof": "^7.0.1",
    "hof-build": "^1.3.4",
    "hof-theme-govuk": "^2.0.4",
    "hogan-express-strict": "^0.5.4",
    "hogan.js": "^3.0.2",
    "jquery": "^3.1.1",
    "moment": "^2.10.3",
